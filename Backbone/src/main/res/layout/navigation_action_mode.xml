<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/count_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/folder_count"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            style="@style/selectedCount"
            android:text="0"/>

        <ImageView
            android:id="@+id/indicatorIconFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/indicatorIconFolder"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/file_count"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            style="@style/selectedCount"
            android:text="0"/>

        <ImageView
            android:id="@+id/indicatorIconFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/indicatorIconFile"/>
    </LinearLayout>

</LinearLayout>