<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!--
    ##
    ##  App Theme Component Styles
    ##
    -->

    <style name="ActionBar.Solid.Holo_dark" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_holo_dark</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_holo_dark</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_holo_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Holo_dark</item>
    </style>

    <style name="ActionBar.Transparent.Holo_dark" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_holo_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Holo_dark</item>
    </style>

    <!-- A theme with overlay -->
    <style name="PopupMenu.Holo_dark" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_holo_dark</item>
    </style>

    <style name="DropDownListView.Holo_dark" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_holo_dark</item>
        <item name="android:divider">@drawable/list_divider_holo_dark</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBarTabStyle.Holo_dark" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_holo_dark</item>
    </style>

    <style name="DropDownNav.Holo_dark" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_holo_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_holo_dark</item>
    </style>

    <style name="ProgressBar.Holo_dark" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_dark</item>
    </style>

    <style name="ActionButton.CloseMode.Holo_dark" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_holo_dark</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Holo_dark.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Holo_dark</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Holo_dark</item>
    </style>

    <!--
    ##
    ##  Independant Style Definitions
    ##
    -->

    <!-- Action mode count-->
    <style name="selectedCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <!-- Use dp rather than sp for size since starts large and must not get too large -->
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <!-- Title -->
    <style name="title_text_appearance">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- The text appearance for breadcrumb information -->
    <style name="breadcrumb_text_appearance">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for principal information (text that need to be highlighted) -->
    <style name="primary_text_appearance">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for principal information (important but not highlight) -->
    <style name="primary_text_appearance_nohighlight" parent="@style/primary_text_appearance">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for secondary information (text with a lower importance) -->
    <style name="secondary_text_appearance">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for primary navigation item (file) information -->
    <style name="navigation_item_primary_text_appearance" parent="primary_text_appearance">

    </style>
    <!-- The text appearance for secondary navigation item (file) information -->
    <style name="navigation_item_secondary_text_appearance" parent="secondary_text_appearance">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- The text appearance for bookmark drawer list separators -->
    <style name="bookmark_drawer_list_separator">
        <item name="android:background">@drawable/list_section_divider_holo_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- The text appearance for primary bookmarks drawer information -->
    <style name="bookmarks_drawer_primary_text_appearance">
        <item name="android:textSize">@dimen/bookmark_drawer_primary_text_size</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- The text appearance for secondary bookmarks drawer information -->
    <style name="bookmarks_drawer_secondary_text_appearance">
        <item name="android:textSize">@dimen/bookmark_drawer_secondary_text_size</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for properties drawer list separators -->
    <style name="properties_drawer_list_separator">
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- The text appearance for primary bookmarks drawer information -->
    <style name="properties_drawer_label_text_appearance">
        <item name="android:textSize">@dimen/properties_drawer_label_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- The text appearance for secondary bookmarks drawer information -->
    <style name="properties_drawer_primary_text_appearance">
        <item name="android:textSize">@dimen/properties_drawer_primary_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for hexeditor -->
    <style name="hexeditor_text_appearance">
        <item name="android:textSize">@dimen/hexeditor_text_size</item>
        <item name="android:textColor">@color/black_transparent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for a console widget -->
    <style name="console_text_appearance">
        <item name="android:textSize">@dimen/console_text_size</item>
        <item name="android:textColor">@color/console_fg</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- The text appearance for dialog titles -->
    <style name="dialog_title_text_appearance">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Breadcrumb Selected Item Title -->
    <style name="breadcrumb_selected_item_title_textappearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/breadcrumbTitleTextColor</item>
        <item name="android:textSize">@dimen/breadcrumb_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/breadcrumb_title_top_margin</item>
        <item name="android:minWidth">@dimen/breadcrumb_min_width</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Breadcrumb Selected Item Subtitle -->
    <style name="breadcrumb_selected_item_subtitle_textappearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?attr/breadcrumbSubtitleTextColor</item>
        <item name="android:textSize">@dimen/breadcrumb_subtitle_text_size</item>
        <item name="android:layout_marginTop">@dimen/breadcrumb_subtitle_top_margin</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">start</item>
    </style>

    <!-- Breadcrumb Dropdown Item -->
    <style name="breadcrumb_selected_dropdown_item_textappearance" parent="@android:style/Widget.Holo.DropDownItem">
        <item name="android:textColor">?attr/breadcrumbTitleTextColor</item>
        <item name="android:textSize">@dimen/breadcrumb_dropdown_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxWidth">@dimen/breadcrumb_dropdown_max_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Breadcrumb Dropdown Item Alias -->
    <style name="breadcrumb_selected_dropdown_item_alias_textappearance" parent="@style/breadcrumb_selected_dropdown_item_textappearance">
        <item name="android:textColor">?attr/breadcrumbSubtitleTextColor</item>
    </style>

    <!-- Breadcrumb ActionBar Button -->
    <style name="breadcrumb_actionbar_button">
        <item name="android:paddingLeft">@dimen/extra_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
    </style>

    <!-- Navigation Grid Layout -->
    <style name="navigation_grid">
        <item name="android:numColumns">@integer/default_grid_columns</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:horizontalSpacing">@dimen/default_horizontal_grid_spacing</item>
        <item name="android:verticalSpacing">@dimen/default_vertical_grid_spacing</item>
    </style>

    <!-- Horizontal Divider -->
    <style name="horizontal_divider">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:background">@color/divider_color_light</item>
    </style>

    <!-- Vertical Divider -->
    <style name="vertical_divider">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:background">@color/divider_color</item>
    </style>

</resources>
